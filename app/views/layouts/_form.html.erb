<div class="main-panel">
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10">
          <div class="card">
            <div class="card-header card-header-primary">
              <div class = "row">
                <div class = "col-md-5">
                  <h4 class="card-title">Cadastrar <%= tipo_usuario.upcase %></h4>
                    <p class="card-category">Adicione um novo <%= tipo_usuario.upcase %> ao sistema</p>
                </div>
                <div class = "col-md-7">
                  <% if tipo_usuario == "administrador" %>
                     <div class="text-warning"><%= flash[:alert] %></div>
                      <br>
                      <div class="text-warning"><%= devise_error_messages! %></div>
                  <% else %>
                    <% if flash[:alert] %>
                      <div class="text-warning"><%= flash[:alert] %></div>
                      <br>
                      <div class="text-warning"><%= flash[:errors] %></div>
                    <% end %>
                  <% end %>
                  
                </div>
              </div>
            </div>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: url, html: { method: :post }) do |f| %>

                <div class="row">
                  <div class="col-md-8">
                   <div class="form-group">
                        <%= f.text_field :nome, autofocus: true, placeholder:"nome", class:"form-control" %>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                        <%= f.email_field :email, autofocus: true, placeholder:"e-mail", class:"form-control" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                      <%= f.password_field :password, placeholder:"senha", class:"form-control" %>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                       <%= f.password_field :password_confirmation,  placeholder: "confirme a senha", class:"form-control" %>
                    </div>
                  </div>
                </div>
                <%= f.hidden_field :tipo_perfil, value: tipo_usuario %>
                <%= f.submit 'Cadastrar', class: "btn btn-primary pull-right" %>
                <%= link_to 'Cancelar', root_path, class: "btn btn-primary pull-right" %>
                <div class="clearfix"></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
